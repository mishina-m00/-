#include <iostream> 
using namespace std; 
int counter = 1;     //обнуление счетчика попыток 
int main ( ) { 
setlocale (LC_ALL, "Russian");  // переход на русский язык
float A, B;  // объявления переменных А, В
cout«"Попытка: " « counter « "\nВведите A "; cin» A;   // ввод приглашения и значений А
cout«"Введите B "; cin»B;  //ввод приглашения и значений В
if((A >= 0 && B >= 0) && (A <5 && B < 5)){ cout«"Ок!\n\n";} // проверка условий и вывод сообщения
else cout«"Ошибка\n\n";  // вывод сообщения 

counter ++;  // увеличение счетчика
main();  // возвращение к  началу программы

}
